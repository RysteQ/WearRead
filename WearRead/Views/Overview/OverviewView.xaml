<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WearRead.Views.Overview.OverviewView"
             Title="Overview">

    <ScrollView>
        <Grid RowDefinitions = "25*,50*,25*" ColumnDefinitions = "*">
            <Label VerticalOptions = "Center" HorizontalOptions = "Center" Grid.Row = "0" Grid.Column = "0" Text = "Title" />
            <Image VerticalOptions = "Center" HorizontalOptions = "Center" Grid.Row = "1" Grid.Column = "0" BackgroundColor = "Red" />
            <Label VerticalOptions = "Center" HorizontalOptions = "Center" Grid.Row = "2" Grid.Column = "0" Text = "25% complete" />
        </Grid>
    </ScrollView>

</ContentPage>